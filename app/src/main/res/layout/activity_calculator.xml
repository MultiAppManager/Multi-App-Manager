<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White_Blue"

    tools:context=".Calculator">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/White_Blue"
        android:ems="10"
        android:layout_margin="1pt"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_marginBottom="2pt"
                android:layout_marginTop="2pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2pt"
                android:background="@color/Medium_Blue"
                android:textColor="@color/black"
                android:onClick="acEvent"
                android:textSize="10pt"
                android:text="AC"></Button>

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginTop="2pt"
                android:layout_marginRight="2pt"
                android:text="+/-"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:background="@color/Medium_Blue">
            </Button>

            <Button
                android:id="@+id/buDivide"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="2pt"
                android:text="/"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="operatorEvent"
                android:background="@color/Medium_Blue">
            </Button>

            <Button
                android:id="@+id/buMultiply"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="*"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="2pt"
                android:textColor="@color/black"
                android:onClick="operatorEvent"
                android:background="@color/Medium_Blue">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_marginBottom="2pt"
                android:layout_marginTop="0pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2pt"
                android:background="@color/White_Blue"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:onClick="numberEvent"
                android:text="7"></Button>

            <Button
                android:id="@+id/bu8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginTop="0pt"
                android:layout_marginRight="2pt"
                android:text="8"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="numberEvent"
                android:background="@color/White_Blue">
            </Button>

            <Button
                android:id="@+id/bu9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="0pt"
                android:text="9"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="numberEvent"
                android:background="@color/White_Blue">
            </Button>

            <Button
                android:id="@+id/bupercent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="%"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="0pt"
                android:textColor="@color/black"
                android:onClick="percentEvent"
                android:background="@color/Medium_Blue">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2pt"
                android:layout_marginTop="0pt"
                android:layout_marginRight="2pt"
                android:layout_marginBottom="2pt"
                android:layout_weight="1"
                android:background="@color/White_Blue"
                android:text="4"
                android:textColor="@color/black"
                android:onClick="numberEvent"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/bu5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginTop="0pt"
                android:layout_marginRight="2pt"
                android:text="5"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="numberEvent"
                android:background="@color/White_Blue">
            </Button>

            <Button
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="0pt"
                android:text="6"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="numberEvent"
                android:background="@color/White_Blue">
            </Button>

            <Button
                android:id="@+id/buplus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="0pt"
                android:textColor="@color/black"
                android:onClick="operatorEvent"
                android:background="@color/Medium_Blue">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_marginBottom="2pt"
                android:layout_marginTop="0pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2pt"
                android:background="@color/White_Blue"
                android:textColor="@color/black"
                android:onClick="numberEvent"
                android:textSize="10pt"
                android:text="1"></Button>

            <Button
                android:id="@+id/bu2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginTop="0pt"
                android:layout_marginRight="2pt"
                android:text="2"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="numberEvent"

                android:background="@color/White_Blue">
            </Button>

            <Button
                android:id="@+id/bu3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="0pt"
                android:text="3"
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="numberEvent"
                android:background="@color/White_Blue">
            </Button>

            <Button
                android:id="@+id/buminus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="-"
                android:textSize="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="0pt"
                android:textColor="@color/black"
                android:onClick="operatorEvent"
                android:background="@color/Medium_Blue">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu0"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_marginBottom="2pt"
                android:layout_marginTop="0pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2pt"
                android:background="@color/White_Blue"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:onClick="numberEvent"
                android:text="0"></Button>

            <Button
                android:id="@+id/buDot"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginTop="0pt"
                android:layout_marginRight="2pt"
                android:text="."
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="numberEvent"
                android:background="@color/White_Blue">
            </Button>

            <Button
                android:id="@+id/buequal"
                android:layout_weight="0.35"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_marginTop="0pt"
                android:text="="
                android:textSize="10pt"
                android:textColor="@color/black"
                android:onClick="equalEvent"
                android:background="@color/Medium_Blue">
            </Button>
        </TableRow>












    </TableLayout>


</LinearLayout>